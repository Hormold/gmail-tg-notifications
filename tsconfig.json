{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "skipDefaultLibCheck": true,
    "noEmit": false,
    "allowJs": true,
    "checkJs": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "strictBindCallApply": false,
    "strictPropertyInitialization": false,
    "noImplicitThis": false,
    "alwaysStrict": false,
    "baseUrl": "./src",
    "paths": {
      "@telegram/*": ["telegram/*"],
      "@gmail/*": ["gmail/*"],
      "@service/*": ["service/*"],
      "@server/*": ["server/*"],
      "@model/*": ["db/model/*"],
      "@controller/*": ["db/controller/*"],
      "@commands/*": ["telegram/commands/*"],
      "@ambient/*": ["ambient_declarations/*"],
      "@ai/*": ["ai/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
